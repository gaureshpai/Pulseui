{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "src/test",
    "src/setupTests.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "src/components/examples/**",
    "src/examples/**",
    "**/*Example.ts",
    "**/*Example.tsx",
    "**/test-import.ts",
    "**/test-import.tsx",
    "src/App.tsx",
    "src/main.tsx",
    "src/utils/errorBoundary.tsx",
    "src/utils/performanceOptimizer.ts"
  ]
}