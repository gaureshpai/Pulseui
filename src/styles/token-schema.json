{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PulseUI Design Token Schema",
  "description": "Schema for design tokens compatible with Figma and design systems like Carbon",
  "type": "object",
  "properties": {
    "brand": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" },
        "generatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "version"]
    },
    "tokens": {
      "type": "object",
      "properties": {
        "light": { "$ref": "#/definitions/themeTokens" },
        "dark": { "$ref": "#/definitions/themeTokens" }
      },
      "required": ["light"]
    }
  },
  "required": ["brand", "tokens"],
  "definitions": {
    "themeTokens": {
      "type": "object",
      "properties": {
        "colors": {
          "type": "object",
          "properties": {
            "primary": { "$ref": "#/definitions/colorScale" },
            "secondary": { "$ref": "#/definitions/colorScale" },
            "success": { "$ref": "#/definitions/colorScale" },
            "warning": { "$ref": "#/definitions/colorScale" },
            "error": { "$ref": "#/definitions/colorScale" },
            "info": { "$ref": "#/definitions/colorScale" },
            "surface": { "$ref": "#/definitions/colorScale" },
            "text": { "$ref": "#/definitions/colorScale" },
            "border": { "$ref": "#/definitions/colorScale" },
            "background": { "$ref": "#/definitions/colorScale" },
            "white": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "black": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "gray": { "$ref": "#/definitions/colorScale" }
          },
          "required": ["primary", "surface", "text", "background"]
        },
        "spacing": {
          "type": "object",
          "properties": {
            "xs": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "sm": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "md": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "lg": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "xl": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "xxl": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "2xl": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            }
          },
          "required": ["xs", "sm", "md", "lg", "xl"]
        },
        "typography": {
          "type": "object",
          "properties": {
            "font-size-xs": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "font-size-sm": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "font-size-md": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "font-size-lg": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "font-size-xl": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "font-size-xxl": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "line-height-xs": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?$"
            },
            "line-height-sm": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?$"
            },
            "line-height-md": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?$"
            },
            "line-height-lg": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?$"
            },
            "line-height-xl": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?$"
            },
            "line-height-xxl": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?$"
            },
            "font-weight-normal": {
              "type": "string",
              "enum": ["400", "normal"]
            },
            "font-weight-medium": {
              "type": "string",
              "enum": ["500", "medium"]
            },
            "font-weight-semibold": {
              "type": "string",
              "enum": ["600", "semibold"]
            },
            "font-weight-bold": { "type": "string", "enum": ["700", "bold"] },
            "font-family": { "type": "string" }
          },
          "required": [
            "font-size-md",
            "line-height-md",
            "font-weight-normal",
            "font-family"
          ]
        },
        "effects": {
          "type": "object",
          "properties": {
            "shadow-sm": { "type": "string" },
            "shadow-md": { "type": "string" },
            "shadow-lg": { "type": "string" },
            "shadow-xl": { "type": "string" },
            "radius-sm": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "radius-md": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "radius-lg": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "radius-xl": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            }
          },
          "required": ["shadow-md", "radius-md"]
        },
        "sizes": {
          "type": "object",
          "properties": {
            "xs": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "sm": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "md": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "lg": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "xl": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            },
            "xxl": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(px|rem|em)$"
            }
          },
          "required": ["sm", "md", "lg"]
        },
        "breakpoints": {
          "type": "object",
          "properties": {
            "mobile": { "type": "string", "pattern": "^\\d+px$" },
            "tablet": { "type": "string", "pattern": "^\\d+px$" },
            "desktop": { "type": "string", "pattern": "^\\d+px$" },
            "wide": { "type": "string", "pattern": "^\\d+px$" }
          },
          "required": ["mobile", "tablet", "desktop"]
        }
      },
      "required": ["colors", "spacing", "typography", "effects"]
    },
    "colorScale": {
      "type": "object",
      "properties": {
        "0": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "1": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "2": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "3": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "4": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "5": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "6": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "7": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "8": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "9": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" }
      },
      "required": ["0", "5", "9"]
    }
  }
}
