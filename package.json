{
  "name": "pulseui-base",
  "version": "1.3.0",
  "description": "âš¡ Ultra-lightweight React component library with design tokens, multi-brand theming, and TypeScript support. Zero heavy dependencies - perfect for production apps.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/pulseui-base.css",
      "require": "./dist/pulseui-base.css"
    },
    "./tokens": {
      "import": "./dist/tokens.css",
      "require": "./dist/tokens.css"
    },
    "./scss": {
      "import": "./src/styles/pulseui-base.scss",
      "require": "./src/styles/pulseui-base.scss"
    },
    "./scss-compiled": {
      "import": "./dist/pulseui-base.scss.css",
      "require": "./dist/pulseui-base.scss.css"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "types",
    "src/styles",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "scripts": {
    "build": "npm run build:lib && npm run build:styles && npm run build:types",
    "build:lib": "vite build --config vite.lib.config.ts",
    "build:types": "tsc --project tsconfig.build.json",
    "build:styles": "sass src/styles/_tokens.scss:dist/tokens.css --style compressed && sass src/styles/pulseui-base.scss:dist/pulseui-base.scss.css --style compressed",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "dependencies": {
    "classnames": "^2.5.1"
  },
  "devDependencies": {
    "@types/classnames": "^2.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "sass": "^1.89.2",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  },
  "keywords": [
    "react",
    "typescript",
    "design-system",
    "ui-components",
    "css-modules",
    "scss",
    "design-tokens",
    "accessibility",
    "responsive",
    "theming",
    "animations",
    "error-handling",
    "performance"
  ],
  "author": "Kazuri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kazuri1/Pulseui.git"
  },
  "bugs": {
    "url": "https://github.com/kazuri1/Pulseui/issues"
  },
  "homepage": "https://github.com/kazuri1/Pulseui#readme"
}
