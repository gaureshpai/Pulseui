{
  "name": "pulseui-base",
  "version": "1.0.0",
  "description": "A modern React design system with TypeScript support, design tokens, and comprehensive component library",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./types/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css"
    },
    "./tokens": {
      "import": "./dist/tokens.css",
      "require": "./dist/tokens.css"
    }
  },
  "files": [
    "dist",
    "types",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:styles",
    "build:lib": "vite build --config vite.lib.config.ts",
    "build:types": "tsc --project tsconfig.build.json",
    "build:styles": "sass src/styles/_tokens.scss:dist/tokens.css --style compressed",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@material-symbols/font-400": "^0.33.0",
    "@mui/icons-material": "^7.2.0",
    "@types/classnames": "^2.3.0",
    "classnames": "^2.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-themes": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "playwright": "^1.54.1",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sass": "^1.89.2",
    "storybook": "^8.6.14",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "react",
    "typescript",
    "design-system",
    "ui-components",
    "css-modules",
    "scss",
    "design-tokens",
    "accessibility",
    "responsive"
  ],
  "author": "Kazuri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kazuri1/Pulseui.git"
  },
  "bugs": {
    "url": "https://github.com/kazuri1/Pulseui/issues"
  },
  "homepage": "https://github.com/kazuri1/Pulseui#readme"
}
